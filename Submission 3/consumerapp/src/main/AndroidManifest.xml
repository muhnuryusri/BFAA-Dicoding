<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bangkit.consumerapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.bangkit.githubuser.READ_DATABASE" />
    <uses-permission android:name="com.bangkit.githubuser.WRITE_DATABASE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/github_icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUser">
        <activity
            android:name=".FavoriteActivity"
            android:theme="@style/Theme.GithubUser.NoActionBar"/>
        <activity android:name=".DetailActivity"/>
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.GithubUser.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>